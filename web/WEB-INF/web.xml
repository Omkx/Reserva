<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>pe.uni.fiis.controlador.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearUsuarioServlet</servlet-name>
        <servlet-class>pe.uni.fiis.controlador.CrearUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActionServlet</servlet-name>
        <servlet-class>pe.uni.fiis.controlador.ActionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearPeliculaServlet</servlet-name>
        <servlet-class>pe.uni.fiis.controlador.CrearPeliculaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservaServlet</servlet-name>
        <servlet-class>pe.uni.fiis.controlador.ReservaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSalaServlet</servlet-name>
        <servlet-class>pe.uni.fiis.controlador.AdminSalaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminFuncionServlet</servlet-name>
        <servlet-class>pe.uni.fiis.controlador.CrearFuncionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>pe.uni.fiis.controlador.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/Admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminFuncionServlet</servlet-name>
        <url-pattern>/AdminFuncion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSalaServlet</servlet-name>
        <url-pattern>/AdminSala</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservaServlet</servlet-name>
        <url-pattern>/Reservar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrearPeliculaServlet</servlet-name>
        <url-pattern>/AdminPelicula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActionServlet</servlet-name>
        <url-pattern>/ActionServlet/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrearUsuarioServlet</servlet-name>
        <url-pattern>/Crear</url-pattern>
    </servlet-mapping>
</web-app>